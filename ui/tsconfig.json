{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],

    "module": "esnext",
    "moduleResolution": "node",

    "jsx": "preserve",
    "allowJs": true,
    "incremental": true,
    "noEmit": true,

    "isolatedModules": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,

    "strict": false, 
    "skipLibCheck": true,

    "paths": {
      "@/*": ["./src/*"]
    },

    "plugins": [{ "name": "next" }]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
