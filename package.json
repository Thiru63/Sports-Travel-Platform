{
  "name": "sports-travel-express",
  "version": "1.0.0",
  "description": "Sports Travel Platform Backend",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "db:generate": "npx prisma generate",
    "db:push": "npx prisma db push",
    "db:studio": "npx prisma studio",
    "test": "cross-env NODE_ENV=test jest --runInBand --detectOpenHandles --verbose --forceExit",
    "test:watch": "cross-env NODE_ENV=test jest --watch --runInBand --forceExit",
     "test:ai-comprehensive": "cross-env NODE_ENV=test jest --runInBand --testTimeout=20000 --forceExit tests/ai-comprehensive.test.js",
    "test:ai-quick": "cross-env NODE_ENV=test jest --runInBand --testTimeout=10000 --forceExit tests/ai-comprehensive.test.js --testNamePattern=\"COMPREHENSIVE AI FLOW|LEAD AI CONVERSATIONS\""
    
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 30000,
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**"
    ],
    "coverageDirectory": "coverage"
  },
  "dependencies": {
    "@prisma/client": "^5.6.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "groq-sdk": "^0.5.0",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "cross-env": "^10.1.0",
    "jest": "^30.2.0",
    "nodemon": "^3.0.1",
    "prisma": "^5.6.0",
    "supertest": "^7.1.4"
  }
}
