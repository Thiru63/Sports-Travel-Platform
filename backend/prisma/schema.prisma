// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ===========================================================
// ADMIN SECURITY
// ===========================================================

model AdminApiKey {
  id          String   @id @default(cuid())
  name        String
  key         String   @unique
  isActive    Boolean  @default(true)
  createdBy   String
  expiresAt   DateTime?
  lastUsedAt  DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// ===========================================================
// EVENT STRUCTURE
// ===========================================================

model Event {
  id          String   @id @default(uuid())
  title       String
  description String?
  location    String
  startDate   DateTime
  endDate     DateTime
  image       String?
  category    String?
  seasonMonths Int[]
  isWeekend    Boolean @default(false)
  slug         String? @unique
  seoTitle     String?
  seoDescription String?
  tags           String[]
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  packages    Package[]
  itineraries Itinerary[]
  addons      AddOn[]
  quotes      Quote[]
}

model Package {
  id            String   @id @default(uuid())
  eventId       String
  title         String
  description   String?
  basePrice     Decimal  @db.Decimal(10, 2)
  dynamicPrice  Decimal? @db.Decimal(10, 2)
  includes      String[]
  excludes      String[]
  location      String?
  eventDate     DateTime?
  category      String?
  image         String?
  maxCapacity   Int?
  minCapacity   Int?
  isFeatured    Boolean  @default(false)
  isEarlyBird   Boolean  @default(false)
  earlyBirdCutoff DateTime?
  currency      String?
  slug          String? @unique
  
  // Relations
  event     Event @relation(fields: [eventId], references: [id], onDelete: Cascade)
  quotes    Quote[]
  orders    Order[]
  analytics AnalyticEvent[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([eventId])
  @@index([isFeatured])
}

model Itinerary {
  id          String   @id @default(uuid())
  eventId     String?
  title       String
  description String?
  dayNumber   Int
  activities  Json
  basePrice   Float?
  duration    Int?
  image       String?
  
  // Relations
  event     Event? @relation(fields: [eventId], references: [id], onDelete: Cascade)
  analytics AnalyticEvent[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([eventId])
  @@index([dayNumber])
}

model AddOn {
  id          String   @id @default(uuid())
  eventId     String?
  title       String
  description String?
  price       Decimal  @db.Decimal(10, 2)
  basePrice   Float?
  image       String?
  isOptional  Boolean  @default(true)
  
  // Relations
  event     Event? @relation(fields: [eventId], references: [id], onDelete: Cascade)
  analytics AnalyticEvent[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([eventId])
}

// ===========================================================
// LEAD & CRM WORKFLOW
// ===========================================================

model Lead {
  id          String   @id @default(uuid())
  name        String?
  email       String?
  phone       String?
  password    String?
  company     String?
  position    String?
  source      String?
  message     String?
  ip          String? @unique
  role        String   @default("lead")
  
  // AI
  packageRecommendedByAi String[] @default([])
  leadScore              Int      @default(0)

  interestedEvents       String[] @default([])
  
  // Workflow
  status                 String   @default("NEW")
  assignedTo             String?
  
  // Relations
  aiConversations AiConversation[]
  statusHistory   LeadStatusHistory[]
  quotes          Quote[]
  orders          Order[]
  analytics       AnalyticEvent[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([email])
  @@index([status])
  @@index([createdAt])
}

model LeadStatusHistory {
  id         String   @id @default(uuid())
  leadId     String
  fromStatus String?
  toStatus   String
  changedBy  String?
  notes      String?
  
  lead Lead @relation(fields: [leadId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  
  @@index([leadId])
}

// ===========================================================
// AI MEMORY
// ===========================================================

model AiConversation {
  id          String   @id @default(uuid())
  leadId      String
  userMessage String
  aiMessage   String
  meta        Json?
  createdAt   DateTime @default(now())
  
  lead Lead @relation(fields: [leadId], references: [id], onDelete: Cascade)
}

// ===========================================================
// BOOKING SYSTEM
// ===========================================================

model Order {
  id         String   @id @default(uuid())
  leadId     String
  packageId  String
  status     String   @default("BOOKED")
  meta       Json?
  createdAt  DateTime @default(now())
  
  lead    Lead    @relation(fields: [leadId], references: [id], onDelete: Cascade)
  package Package @relation(fields: [packageId], references: [id], onDelete: Cascade)
}

// ===========================================================
// QUOTE SYSTEM
// ===========================================================

model Quote {
  id                     String   @id @default(uuid())
  leadId                 String
  eventId                String
  packageId              String
  addonIds               String[]
  itinerariesIds         String[]
  
  // Pricing
  basePrice              Decimal @db.Decimal(10, 2)
  seasonalMultiplier     Decimal @db.Decimal(10, 2)
  seasonalAdjustment     Decimal @db.Decimal(10, 2)
  earlyBirdDiscount      Decimal @db.Decimal(10, 2)
  lastMinuteSurcharge    Decimal @db.Decimal(10, 2)
  groupDiscount          Decimal @db.Decimal(10, 2)
  weekendSurcharge       Decimal @db.Decimal(10, 2)
  addonsTotal            Decimal @db.Decimal(10, 2)
  itinerariesTotal            Decimal @db.Decimal(10, 2)
  subtotal            Decimal @db.Decimal(10, 2)
  finalPrice             Decimal @db.Decimal(10, 2)
  
  // Details
  travellers    Int
  travelDates   DateTime[]
  daysUntilEvent  Int?
  includesWeekend  Boolean @default(false)
  calculationNotes  String?

  notes         String?
  expiryDate    DateTime
  currency      String?
  
  // Email tracking
  emailSent     Boolean  @default(false)
  emailSentAt   DateTime?
  status        String?
  
  // Relations
  lead    Lead   @relation(fields: [leadId], references: [id], onDelete: Cascade)
  event   Event  @relation(fields: [eventId], references: [id])
  package Package @relation(fields: [packageId], references: [id])
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([leadId])
  @@index([expiryDate])
}

// ===========================================================
// ANALYTICS
// ===========================================================

model AnalyticEvent {
  id          String   @id @default(uuid())
  type        String
  page        String?
  section     String?
  element     String?
  ip          String?
  userAgent   String?
  metadata    Json?
  createdAt   DateTime @default(now())
  
  // Optional relations
  leadId      String?
  lead        Lead?     @relation(fields: [leadId], references: [id])
  
  packageId   String?
  package     Package?  @relation(fields: [packageId], references: [id])
  
  itineraryId String?
  itinerary   Itinerary? @relation(fields: [itineraryId], references: [id])
  
  addonId     String?
  addon       AddOn? @relation(fields: [addonId], references: [id])
  
  @@index([type])
  @@index([createdAt])
}